@* Views/PastryShops/Delete.cshtml *@
@model SSH_FrontEnd.Models.DTOs.PastryShopDTO

@{
    ViewData["Title"] = "Delete Pastry Shop";
}

<h2>Delete Pastry Shop</h2>

<h4>Are you sure you want to delete this pastry shop?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.ShopName</dd>
    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>
    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ShopId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
