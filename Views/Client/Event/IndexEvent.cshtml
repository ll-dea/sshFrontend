@model IEnumerable<SSH_FrontEnd.Models.DTOs.EventDTO>
@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/user.css" />
<!--<script src="~/js/user.js"></script>-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
    <title>My Events - EventPlanner</title>
</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="/user/dashboard" class="brand">
            <i class="bx bxs-smile"></i>
            <span class="text">EventPlanner</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="/user/dashboard"><i class="bx bxs-dashboard"></i><span class="text">Dashboard</span></a>
            </li>
            <li>
                <a href="/user/events"><i class="bx bxs-calendar-event"></i><span class="text">My Events</span></a>
            </li>
            <li>
                <a href="/user/bookings"><i class="bx bxs-book-content"></i><span class="text">My Bookings</span></a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#" class="logout">
                    <i class="bx bxs-log-out-circle"></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class="bx bx-menu"></i>
            <a href="#" class="nav-link">My Events</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search events..." />
                    <button type="submit" class="search-btn">
                        <i class="bx bx-search"></i>
                    </button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden />
            <label for="switch-mode" class="switch-mode"></label>
        </nav>

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>My Events</h1>
                    <ul class="breadcrumb">
                        <li><a asp-controller="User" asp-action="Dashboard">Dashboard</a></li>
                        <li><i class="bx bx-chevron-right"></i></li>
                        <li><a class="active" href="#">My Events</a></li>
                    </ul>
                </div>
            </div>

            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Event List</h3>
                        <i class="bx bx-search"></i>
                        <i class="bx bx-filter"></i>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Date & Time</th>
                                <th>Type</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="eventListTable">
                            @foreach (var evt in Model)
                            {
                                <tr>
                                    <td>@evt.EventName</td>
                                    <td>@evt.EventDate?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@(evt.EventTypeId.HasValue ? "Type " + evt.EventTypeId : "N/A")</td>
                                    <td>Upcoming</td> <!-- You can change this based on logic -->
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </section>
</body>
</html>
