@model SSH_FrontEnd.Models.DTOs.EventDTO

@{
    Layout = "_Layout";
}

<h2>Delete Event</h2>

<form asp-action="DeleteEvent" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EventId" />

    <div>
        <label>Event Name</label>
        <input asp-for="EventName" class="form-control" disabled />
    </div>
    <div>
        <label>Event Date</label>
        <input asp-for="EventDate" class="form-control" type="datetime-local" disabled />
    </div>
    <div>
        <label>Event Type</label>
        <input asp-for="EventTypeId" class="form-control" disabled />
    </div>
    <div>
        <label>Tenant ID</label>
        <input asp-for="TenantId" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="IndexEvent" class="btn btn-secondary mt-3">Cancel</a>
</form>
