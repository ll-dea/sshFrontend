@model SSH_FrontEnd.VM.EventVM.EventCreateVM

@{
    ViewData["Title"] = "Create Event";
}

<h2>Create Event</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Event.EventName"></label>
        <input asp-for="Event.EventName" class="form-control" />
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Event.EventType"></label>
        <input asp-for="Event.EventType" class="form-control" />
        <span asp-validation-for="Event.EventType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Event.EventDate"></label>
        <input asp-for="Event.EventDate" type="date" class="form-control" />
        <span asp-validation-for="Event.EventDate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Event.ApplicationUserId" />

    <div class="form-group">
        <label for="SelectedVenueId">Venue</label>
        <select asp-for="SelectedVenueId" asp-items="@(new SelectList(Model.Venues, "Id", "Name"))" class="form-control"></select>
    </div>

    <!-- Repeat for other providers (Music, Florist, PastryShop) -->

    <button type="submit" class="btn btn-primary">Create and Select Providers</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
