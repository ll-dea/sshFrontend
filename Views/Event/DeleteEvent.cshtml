@using SSH_FrontEnd.VM.EventVM
@model EventDeleteVM
@{
    ViewData["Title"] = "Delete Event";
}
<h2>Delete Event</h2>
<h4>Are you sure you want to delete this event?</h4>
<div>
    <strong>@Model.EventName</strong><br />
    Type: @Model.EventType<br />
    Date: @Model.EventDate?.ToShortDateString()<br />
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MyEvents" class="btn btn-secondary">Cancel</a>
</form>
