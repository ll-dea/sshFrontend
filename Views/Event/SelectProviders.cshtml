@model SSH_FrontEnd.Models.ViewModels.ProviderSelectionViewModel

@{
    ViewData["Title"] = "Select Providers";
}

<h2>Select Providers for Event</h2>

<form asp-action="BookProviders" method="post">
    <input type="hidden" asp-for="EventId" />

    <div class="form-group">
        <label>Venue</label>
        <select asp-for="SelectedVenueId" class="form-control">
            <option value="">-- Select Venue --</option>
            @foreach (var venue in Model.Venues)
            {
                <option value="@venue.Id">@venue.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Music Provider</label>
        <select asp-for="SelectedMusicProviderId" class="form-control">
            <option value="">-- Select Music --</option>
            @foreach (var music in Model.MusicProviders)
            {
                <option value="@music.Id">@music.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Menu</label>
        <select asp-for="SelectedMenuId" class="form-control">
            <option value="">-- Select Menu --</option>
            @foreach (var menu in Model.Menus)
            {
                <option value="@menu.Id">@menu.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Florist</label>
        <select asp-for="SelectedFloristId" class="form-control">
            <option value="">-- Select Florist --</option>
            @foreach (var florist in Model.Florists)
            {
                <option value="@florist.Id">@florist.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Pastry Shop</label>
        <select asp-for="SelectedPastryShopId" class="form-control">
            <option value="">-- Select Pastry Shop --</option>
            @foreach (var pastry in Model.PastryShops)
            {
                <option value="@pastry.Id">@pastry.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Book Providers</button>
</form>
