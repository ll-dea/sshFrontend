@model IEnumerable<SSH_FrontEnd.Models.DTOs.ApplicationUserDTO>

@{
    ViewData["Title"] = "User Management";
}

<h2>User List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@index++</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Name</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
